<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{currentUser.fullname}}</h5>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
                <li class="list-group-item">
                <a href="/loged-in/{{currentUser._id}}/infor" class="nav-link d-flex justify-content-between align-items-center p-3">
                  <i class="fa fa-home fa-lg" style="color: #007bff;"></i>
                  <span class="mb-0">Trang chủ</span>
                </a>
              </li>
              <li class="list-group-item">
                <a href="/loged-in/{{currentUser._id}}/infor/changeInfor" class="nav-link d-flex justify-content-between align-items-center p-3">
                  <i class="fa fa-user fa-lg" style="color: #007bff;"></i>
                  <span class="mb-0">Thay đổi thông tin hiển thị</span>
                </a>
              </li>
              <li class="list-group-item">
                <a href="/loged-in/{{currentUser._id}}/infor/changePass" class="nav-link d-flex justify-content-between align-items-center p-3">
                  <i class="fa fa-lock fa-lg" style="color: #28a745;"></i>
                  <span class="mb-0">Đổi mật khẩu</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Họ tên</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{currentUser.fullname}}</p>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-sm-3">
                <p class="mb-0">Số điện thoại</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{currentUser.sdt}}</p>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Địa chỉ</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{currentUser.address}}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Lịch sử đơn hàng</h5>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Ngày giờ</th>
                    <th scope="col">Đơn đặt</th>
                    <th scope="col">Đơn giá</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each billHistories}}
                    <tr>
                      <td>{{this.orderDate}}</td>
                      <td>
                        <a href="/loged-in/history/{{this.slug}}" class="btn btn-link">Chi tiết</a>
                      </td>
                      <td>{{this.totalAmount}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
