<main class="page contact-page">
        <section class="portfolio-block contact">
            <div class="container">
                <div class="heading">
                    <h2>Đăng ký tài khoản</h2>
                </div>
            </div>

                <form method="POST" action ="/register" class="border rounded border-0 shadow-lg p-3 p-md-5" data-bs-theme="light" name ="registerForm">
                    <div class="mb-3"><label class="form-label" >Tên người dùng</label><input class="form-control" type="text" id="fullname" name="fullname"></div>
                    <div class="mb-3"><label class="form-label" >Tên đăng nhập</label><input class="form-control" id="username" name="username"></div>

              
            {{#if errorMessage}}
                <div style="color: red; font-style: italic" >{{errorMessage}}</div>
            {{/if}}

                    <div class="mb-3"><label class="form-label" >Mật khẩu</label><input class="form-control" type="password" id="password" name="password"></div>
                    <div class="mb-3"><label class="form-label">Nhập lại mật khẩu</label><input class="form-control" type="password" id="confirmpassword" name="confirmpassword"></div>
                    <div class="mb-3"><label class="form-label" >Địa chỉ</label><input class="form-control" type="text" id="address" name="address"></div>
                    <div class="mb-3">
                        <div class="row">
                            <div class="col-md-6 button"><button class="btn btn-primary d-block w-100" type="submit" onclick="if(!validateForm()) return false;">Đăng ký</button></div>
                        </div>
                    </div>
                </form>



            </div>
            </div>
        </section>
    </main>
<script>
  function validateForm() {
    // Không được để trống địa chỉ
    var address = document.getElementById("address").value;

    if (address.trim() === "") {
      alert("Địa chỉ không được để trống");
      return false;
    }

    // Không được để password không khớp
    var password = document.getElementById("password").value;
    var confirmPassword = document.getElementById("confirmpassword").value;

    if (password !== confirmPassword) {
      alert("Mật khẩu và xác nhận mật khẩu không khớp.");
      return false;
    }

    return true; // Trả về true khi không có lỗi
  }
</script>

